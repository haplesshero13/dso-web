source 'https://rubygems.org'

ruby '2.0.0'
gem 'rails', '3.2.13'
gem 'thin'
gem 'mongoid'
gem 'bson_ext'
gem 'mongo_ext'
gem 'jquery-rails'
gem 'jquery-rails-cdn'
gem 'slim', '>= 1.3.8'
gem 'slim-rails'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'debugger'
  gem 'capybara'
end
